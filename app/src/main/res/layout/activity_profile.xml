<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".ProfileActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/nud_background"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="100dp"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:cardCornerRadius="250dp"
                    app:cardElevation="0dp"
                    app:cardBackgroundColor="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="250dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/main_blue">

                        <androidx.cardview.widget.CardView
                            android:layout_width="125dp"
                            android:layout_height="125dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="250dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:src="@drawable/display_picture_image"
                                android:scaleType="centerCrop"/>

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Ulysses Simpson"
                    android:textAlignment="center"
                    android:textSize="20dp"
                    android:fontFamily="@font/montserrat_bold"/>

            </LinearLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="3"
                android:rowCount="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_columnWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="10"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/montserrat_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="FOLLOWERS"
                        android:textSize="13sp"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_columnWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="68"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/montserrat_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="FOLLOWING"
                        android:textSize="13sp"
                        android:textAlignment="center"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_columnWeight="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="103"
                        android:textSize="25sp"
                        android:textAlignment="center"
                        android:fontFamily="@font/montserrat_bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="LIKES"
                        android:textSize="13sp"
                        android:textAlignment="center"/>

                </LinearLayout>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="2"
                android:rowCount="1">

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:text="Edit Profile"
                    android:textColor="@color/text_blue"
                    android:backgroundTint="@color/main_yellow"
                    android:fontFamily="@font/montserrat_bold"/>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:onClick="toUpload"
                    android:layout_margin="8dp"
                    android:text="Upload Items"
                    android:textColor="@color/text_blue"
                    android:backgroundTint="@color/main_yellow"
                    android:fontFamily="@font/montserrat_bold"/>

            </GridLayout>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:columnCount="2"
                android:background="@drawable/underline"
                android:rowCount="1">

                <TextView
                    android:id="@+id/text_uploads"
                    android:onClick="toUploads"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="UPLOADS"
                    android:textColor="?viewColorOpposite"
                    android:fontFamily="@font/montserrat_bold"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/text_likes"
                    android:onClick="toLikes"
                    android:clickable="true"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:text="LIKES"
                    android:textColor="?viewColorOpposite"
                    android:textAlignment="center"/>

            </GridLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <GridLayout
                    android:id="@+id/profle_uploads"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="2">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/cookies"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/uniform"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/notes"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/burger"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/cookies"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/uniform"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/notes"/>

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="150dp"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:background="@drawable/burger"/>

                </GridLayout>

                <TextView
                    android:id="@+id/profle_likes"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:layout_marginTop="100dp"
                    android:text="You haven't liked anything."
                    android:textSize="20dp"
                    android:textColor="?viewColorOpposite"
                    android:textAlignment="center"/>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>