<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/homePost_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_gravity="center"
            app:cardCornerRadius="250dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/homePost_imageView_profile_picture"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/temp_pfp"/>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/homePost_textView_seller_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="Unknown Seller Name"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/homePost_textView_seller"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:textSize="20sp"
                android:text="Seller"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="32dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            app:cardCornerRadius="8dp">

            <ImageView
                android:id="@+id/homePost_imageView_product_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                android:src="@drawable/no_image"/>


        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/homePost_textView_likeCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:textSize="12sp"
            android:text="0 liked this post."
            android:textColor="@color/main_blue"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/homePost_imageView_like"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/heart_hollow"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>

            <ImageView
                android:id="@+id/homePost_imageView_message"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_marginTop="7dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/message"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"/>


            <TextView
                android:id="@+id/homePost_textView_variant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textAlignment="textEnd"
                android:text="Variant: Unknown"/>

        </LinearLayout>

        <TextView
            android:id="@+id/homePost_textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Unknown Product Name"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/homePost_textView_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Unknown Price"
            android:textColor="@color/main_yellow"
            android:fontFamily="@font/montserrat_bold"/>

        <TextView
            android:id="@+id/homePost_textView_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="30dp"
            android:textSize="15sp"
            android:text="No Description"
            android:maxLines="2"
            android:ellipsize="end"/>


    </LinearLayout>

</LinearLayout>