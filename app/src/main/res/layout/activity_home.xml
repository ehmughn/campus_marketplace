<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".HomeActivity">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/rounded_corner_only_bottom"
            android:backgroundTint="@color/main_blue"/>


    </RelativeLayout>

    <LinearLayout
        android:id="@+id/foreground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:background="@drawable/four_circles"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:gravity="end"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/rounded_corner_yellow_gradient"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/cart1"
                        android:layout_width="35dp"
                        android:layout_height="40dp"
                        android:background="@drawable/shopping_bag"/>

                    <TextView
                        android:id="@+id/cart2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:layout_marginStart="10dp"
                        android:textColor="@color/main_yellow"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="10"
                        android:textSize="25sp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_marginStart="40dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:background="@drawable/rounded_corner_yellow_gradient"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/profile"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:background="@drawable/profile"/>

                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp">

            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:orientation="horizontal"
                android:padding="10dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/rounded_corner">

                <ImageView
                    android:id="@+id/icon_search"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/search"/>

                <EditText
                    android:id="@+id/input_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:hint="Search in Marketplace"
                    android:textColorHint="@color/text_blue"
                    android:inputType="text"
                    android:background="@android:color/transparent"
                    android:layout_gravity="center"
                    android:textSize="12sp"/>



        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

</FrameLayout>