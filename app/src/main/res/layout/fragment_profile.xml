<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.fragments.ProfileFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/nud_background"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="100dp"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="250dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/white">

                        <androidx.cardview.widget.CardView
                            android:layout_width="130dp"
                            android:layout_height="130dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="250dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/main_blue">

                            <androidx.cardview.widget.CardView
                                android:layout_width="125dp"
                                android:layout_height="125dp"
                                android:layout_gravity="center"
                                app:cardCornerRadius="250dp"
                                app:cardElevation="0dp">

                                <ImageView
                                    android:id="@+id/profile_imageView_profilePicture"
                                    android:layout_width="125dp"
                                    android:layout_height="125dp"
                                    android:src="@drawable/temp_pfp"
                                    android:scaleType="centerCrop"/>

                            </androidx.cardview.widget.CardView>

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/profile_textView_name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="Ulysses Simpson"
                        android:textAlignment="center"
                        android:textSize="20dp"
                        android:fontFamily="@font/montserrat_bold"/>

                    <TextView
                        android:id="@+id/profile_textView_bio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="I'm so useless but not depressed."
                        android:maxLines="3"
                        android:textAlignment="center"
                        android:textSize="14dp"/>

                </LinearLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="3"
                    android:rowCount="1">

                    <LinearLayout
                        android:id="@+id/profile_layout_followers"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1">

                        <TextView
                            android:id="@+id/profile_textView_followers"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="10"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="FOLLOWERS"
                            android:textSize="13sp"
                            android:textAlignment="center"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/profile_layout_following"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1">

                        <TextView
                            android:id="@+id/profile_textView_following"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="68"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="FOLLOWING"
                            android:textSize="13sp"
                            android:textAlignment="center"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_columnWeight="1">

                        <TextView
                            android:id="@+id/profile_textView_likes"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="103"
                            android:textSize="25sp"
                            android:textAlignment="center"
                            android:fontFamily="@font/montserrat_bold"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="LIKES"
                            android:textSize="13sp"
                            android:textAlignment="center"/>

                    </LinearLayout>

                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="2"
                    android:rowCount="1">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:text="Edit Profile"
                        android:textColor="@color/text_blue"
                        android:backgroundTint="@color/main_yellow"/>

                    <Button
                        android:id="@+id/profile_button_uploadItems"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:layout_margin="8dp"
                        android:text="Upload"
                        android:textColor="@color/text_blue"
                        android:backgroundTint="@color/main_yellow"/>

                </GridLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:columnCount="2"
                    android:background="@drawable/underline"
                    android:rowCount="1">

                    <TextView
                        android:id="@+id/text_uploads"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="UPLOADS"
                        android:textColor="?viewColorOpposite"
                        android:fontFamily="@font/montserrat_bold"
                        android:textAlignment="center"/>

                    <TextView
                        android:id="@+id/text_likes"
                        android:clickable="true"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:text="LIKES"
                        android:textColor="?viewColorOpposite"
                        android:textAlignment="center"/>

                </GridLayout>

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="300dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/profile_recyclerView_uploads"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"/>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/profile_recyclerView_likes"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"
                        android:visibility="invisible"/>

                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>