<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PostActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center">

        <LinearLayout
            android:id="@+id/foreground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:padding="8dp">

                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="16dp"
                    android:layout_gravity="center"
                    layout="@layout/header_numart_without_logo"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:background="@color/main_blue">

                <ImageView
                    android:id="@+id/post_imageView_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/no_image"/>

            </LinearLayout>

            <TextView
                android:id="@+id/post_textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:textSize="25dp"
                android:text="Product Title"
                android:fontFamily="@font/montserrat_bold"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/post_textView_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:text="â‚±00.00"
                    android:textColor="@color/main_yellow"
                    android:fontFamily="@font/montserrat_bold"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end">

                    <androidx.cardview.widget.CardView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="250dp"
                        app:cardBackgroundColor="@color/main_yellow"
                        app:cardElevation="0dp">

                        <androidx.cardview.widget.CardView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center"
                            app:cardCornerRadius="250dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/homePost_imageView_profile_picture"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:adjustViewBounds="true"
                                android:src="@drawable/display_picture_image"/>

                        </androidx.cardview.widget.CardView>

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seller"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Michael Jackson"
                            android:fontFamily="@font/montserrat_bold"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/homePost_imageView_message"
                        android:layout_width="40dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:src="@drawable/message"
                        android:adjustViewBounds="true"
                        android:scaleType="centerCrop"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/post_button_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_corner"
                    android:backgroundTint="@color/main_yellow"
                    android:text="Details"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_bold"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/post_button_reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_marginHorizontal="20dp"
                    android:background="@drawable/rounded_corner_hollow"
                    android:text="Reviews"
                    android:textColor="@color/main_yellow"
                    android:textAllCaps="false"
                    android:fontFamily="@font/montserrat_bold"/>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/post_layout_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="visible"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/post_textView_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="16dp"
                        android:textSize="14dp"
                        android:text="Product Description\nProduct Description\nProduct Description"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="16dp"
                        android:textSize="14dp"
                        android:fontFamily="@font/montserrat_bold"
                        android:text="Variants: "/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/rounded_corner_hollow"
                            android:text="Matcha"
                            android:textColor="@color/main_yellow"
                            android:textAllCaps="false"
                            android:fontFamily="@font/montserrat_bold"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/rounded_corner"
                            android:backgroundTint="@color/main_yellow"
                            android:text="Chocolate"
                            android:textAllCaps="false"
                            android:fontFamily="@font/montserrat_bold"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_columnWeight="1"
                            android:layout_marginHorizontal="10dp"
                            android:background="@drawable/rounded_corner_hollow"
                            android:text="Red Velvet"
                            android:textColor="@color/main_yellow"
                            android:textAllCaps="false"
                            android:fontFamily="@font/montserrat_bold"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/post_layout_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="invisible"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/post_recyclerView_reviews"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="30dp"/>

                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>